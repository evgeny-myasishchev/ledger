<div class='col-sm-5 col-md-4'>
	<div class='panel panel-default'>
		<div class='panel-heading'>
			<strong>Accounts</strong>
			<a href='#/accounts/new' class="btn btn-default btn-xs pull-right" title="Add new account">
				<i class="glyphicon glyphicon-plus"></i>
			</a>
		</div>
		<div class='list-group' ng-init='filter = showClosed ? {} : {is_closed: false}'>
			<a 	href='#/accounts/{{account.sequential_number}}' class='list-group-item'
				ng-repeat="account in accounts | filter:filter | orderBy:['is_closed', 'name']" ng-class="{active: activeAccount == account}">
				<span ng-show='account.is_closed' class='glyphicon glyphicon-lock'></span>
				{{account.name}}
				<span class='pull-right'>{{account.balance | money }}</span> 
			</a>
			<a href='#' class='list-group-item' ng-show='hasClosedAccounts()' ng-click='toggleShouldShowClosedAccounts(); filter = showClosed ? {} : {is_closed: false}; $event.preventDefault();'>
				<span ng-show='!showClosed'>Show closed accounts</span>
				<span ng-show='showClosed'>Hide closed accounts</span>
			</a>
		</div>
	</div>
</div>
<div class='col-sm-7 col-md-8'>
	<%= render partial: 'account_transactions' %>
</div>
