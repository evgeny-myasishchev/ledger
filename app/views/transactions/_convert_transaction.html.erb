<form ng-submit='convert()'>
	<label class='label label-info'>{{transaction.amount | money}} <sup>{{(transaction.account_id | accountById).currency_code}}</sup></label>
	<div class='form-group'>
		<label class='control-label'>Current transaction type</label>
		<input type='text' class='form-control' value="{{transaction.type_id | transactionTypeName}}" disabled>
	</div>
	<div class='form-group'>
		<label class='control-label'>Convert transaction to type</label>
		<select class='form-control' ng-model='type' ng-options='type.id | transactionTypeName for type in transactionTypes | filter:{id: "!" + transaction.type_id}' required='required'>
			<option>Please select</option>
		</select>
	</div>
	<div class='form-group'>
		<input type='submit' class='btn btn-primary btn-sm' value='Convert' />
		<input type='button' ng-click='cancel()' class='btn btn-default btn-sm' value='Cancel' />
	</div>
</form>